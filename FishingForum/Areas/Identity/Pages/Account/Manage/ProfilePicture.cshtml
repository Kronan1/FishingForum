@page
@model FishingForum.Areas.Identity.Pages.Account.Manage.ProfilePictureModel
@{

    ViewData["Title"] = "Profile Picture";
    ViewData["ActivePage"] = ManageNavPages.ProfilePicture;
}

<h3>@ViewData["Title"]</h3>


@if (Model.UploadSuccess)
{
    <p class="text-success">file uploaded successfully</p>

    <img src="@Model.ImgUrl" alt="Profile Picture" />
}

@Html.ValidationSummary(true, "", new { @class = "text-danger" })

<div class="row">
    <div class="col-md-6">



        <form method="post" enctype="multipart/form-data">
            <input type="file" name="UploadedFile" />
            <input type="submit" value="Upload" />
        </form>

        <p>
            <a id="delete" asp-page="NotImplemented" class="btn btn-danger">Delete</a>
        </p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
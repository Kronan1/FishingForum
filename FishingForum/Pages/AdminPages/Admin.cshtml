@page
@model AdminModel
@{
}

<a asp-route-seeReported="@true">Reported messages</a>
<a asp-route-roleManager="@true" class="px-3">Manage Roles</a>

<div class="my-3">
    <h3>Categories</h3>
    @foreach (var category in Model.Categories)
    {
        <div class=" row mx-auto d-flex justify-content-between align-items-center pt-2">
            <div class="col">@category.Name</div>
            <div class="col"><a asp-route-editCategoryId="@category.Id" class="text-warning">Edit</a></div>
            <div class="col"><a asp-route-deleteCategoryId="@category.Id" class="text-danger">Remove</a></div>
        </div>
    }


</div>


<div class="my-3">
    <form method="post">
        <label asp-for="NewCategory.Name">Name</label>
        <input asp-for="NewCategory.Name" />
        <span asp-validation-for="NewCategory.Name" class="text-danger"></span>

        <input type="submit" value="Add Category" />
    </form>
</div>



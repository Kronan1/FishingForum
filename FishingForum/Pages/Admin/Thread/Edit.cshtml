@page
@model FishingForum.Pages.Admin.Thread.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Thread</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Thread.Id" />
            <div class="form-group">
                <label asp-for="Thread.Title" class="control-label"></label>
                <input asp-for="Thread.Title" class="form-control" />
                <span asp-validation-for="Thread.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Thread.SubCategoryId" class="control-label"></label>
                <select asp-for="Thread.SubCategoryId" class="form-control" asp-items="ViewBag.SubCategoryId"></select>
                <span asp-validation-for="Thread.SubCategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Thread.UserId" class="control-label"></label>
                <input asp-for="Thread.UserId" class="form-control" />
                <span asp-validation-for="Thread.UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Thread.DateCreated" class="control-label"></label>
                <input asp-for="Thread.DateCreated" class="form-control" />
                <span asp-validation-for="Thread.DateCreated" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
